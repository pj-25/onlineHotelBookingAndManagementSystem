<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fx:id="viewPane" fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ohbams.clientApplication.mainApp.res.layouts.staffView.receptionistView.CheckOutGuest">
    <content>
        <VBox fx:id="viewPaneChild" alignment="TOP_CENTER" spacing="10.0">
            <children>
                <Label fx:id="pageTitle" text="CheckOut Guests">
                    <font>
                        <Font name="Monospaced Bold" size="30.0" />
                    </font>
                </Label>
                <Separator prefWidth="200.0" />
                <ImageView fitHeight="273.0" fitWidth="314.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../images/png/013-check out.png" />
                    </image>
                </ImageView>
            <Separator prefWidth="200.0" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Booking Id:" />
                  <TextField fx:id="bookingId" />
               </children>
            </HBox>
                <Button fx:id="checkOutBtn" mnemonicParsing="false" onAction="#checkout" text="CheckOut" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></VBox>
    </content>
</ScrollPane>
